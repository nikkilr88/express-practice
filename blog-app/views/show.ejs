<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1><%= blog.title %></h1>
            <div class="card">
                <img class="card-img-top" src="<%= blog.image %>" style="width: 100%; height: auto;" />
                <div class="card-block">
                    <div class="card-title">
                        <%= blog.created_at.toDateString() %>
                    </div>
                    <div class="card-text">
                        <%- blog.body %>
                    </div>
                </div>
            </div>
                <a class="btn btn-success" href="/blogs/<%= blog._id %>/edit">Edit</a>
                <form id="delete-form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger float-left">Delete</button>
                </form>
        </div>
    </div>
</div>

<% include ./partials/header %>

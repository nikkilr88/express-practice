<% include ./partials/header %>

<h1>Add New Blog</h1>

<div class="container">
    <form action="/blogs" method="POST">
        <div class="form-group">
            <input class="form-control" name="blog[title]" placeholder="Title" type="text" />
        </div>
        <div class="form-group">
            <input class="form-control" name="blog[image]" placeholder="Image" type="text" />
        </div>
        <div class="form-group">
            <textarea class="form-control" name="blog[body]" placeholder="Body" type="text"></textarea>
        </div>
        <div class="form-group">
            <input class="form-control btn btn-primary" name="blog[image]" type="submit" />
        </div>
        
    </form>
</div>



<% include ./partials/header %>

<h1>Edit Blog: <%= blog.title %></h1>

<div class="container">
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" name="blog[title]" type="text" value="<%= blog.title %>" />
        </div>
        <div class="form-group">
            <input class="form-control" name="blog[image]" type="text" value="<%= blog.image %>" />
        </div>
        <div class="form-group">
            <textarea class="form-control" name="blog[body]" type="text"><%= blog.body %></textarea>
        </div>
        <div class="form-group">
            <input class="form-control btn btn-success" type="submit" value="Save" />
        </div>
        
    </form>
</div>


<% include ./partials/footer %>

<% include ./partials/header %>

  <nav>
    <ul>
      <li>Home</li>
      <li><a href="/about">About Us</a></li>
      <li class="activeLink"><a href="/">Catalogue</a></li>
      <li>Contact Us</li>
    </ul>
  </nav>
  
  <!-- Carousel-->
  <div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <!-- Slides -->
    <div class="carousel-inner" role="listbox">
      <div id="slide1" class="carousel-item active">
        <div class="slideCapt">
          <h3>Lorem Ipsum</h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
        </div>
          
      </div>
      <div id="slide2" class="carousel-item">
        <div class="slideCapt">
          <h3>Lorem Ipsum</h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
        </div>
      </div>
 
    </div>

    <!-- Prev/Next Controls -->
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  
<!-- Main Content -->
  <main>
    <h2>Featured Items</h2>
    
    <select name="types" id="types">
      <option value="all">All</option>
      <option value="wallets">Wallets</option>
      <option value="purses">Leather Purses</option>
      <option value="faux-purses">Faux Leather Purses</option>
    </select>
    <section id="items">
      <% Items.forEach(function(item, index){ %>
          <div id="<%= index %>" data-type="<%= item.type %>" class='item'>
              <h4><%= item.name %></h4>
              <div class='img-wrapper'>
                  <img src="<%= item.image %>">
              </div><p class='description'><%= item.description %></p>
              <button onClick="getIndex(<%= JSON.stringify(Items) %>, <%=index%>)" id="<%= index %>" class='details'>Details</button>
        </div>
      <% }); %>
    </section>
  </main>
  
  <!-- Show Box -->
  <div class="showBox">
  	<span class="close"><i class="fa fa-times"></i></span>
  	<span class="name"></span>
  	<span class="img"></span>
  	<span class="status"></span>
  	<span class="price"></span>
  	<span class="description"></span>
  	<button id="addCart">Add To Cart</button>
  </div>
  
  <% include ./partials/footer %>